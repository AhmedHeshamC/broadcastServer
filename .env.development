# Development Environment Configuration
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/broadcast-chat-dev

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration (Development Only - change in production!)
JWT_ACCESS_SECRET=dev-access-secret-key-change-in-production
JWT_REFRESH_SECRET=dev-refresh-secret-key-change-in-production
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# OAuth Configuration (Optional - leave empty to disable)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Security Configuration
MAX_CONNECTIONS_PER_USER=5
MAX_MESSAGE_LENGTH=1000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_MESSAGE_SIZE=10000

# Logging
LOG_LEVEL=debug