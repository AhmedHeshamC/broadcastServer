{
  "compilerOptions": {
    "target": "ES2016", // Or a later version
    "module": "CommonJS", // Crucial for compatibility with require
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // Skip checking library files for conflicts
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node", // Ensure Node.js module resolution
    "lib": ["ES2016", "DOM"] // Explicitly include DOM libs
  },
  "include": ["**/*.ts"], // Files to include in compilation
  "exclude": ["node_modules"] // Folders to exclude
}
