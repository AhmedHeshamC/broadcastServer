{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "outDir": "../dist-tests",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
